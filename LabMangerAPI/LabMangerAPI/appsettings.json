{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SessionDay": 50,
  "SessionHeaderName": "X-Session-Id",
  "SessionValidateKey": "userid",
  "SessionIssueSessionIdOnPaths": ["/signinout/signin", "/signinout/signin/"],
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8000"
      },
      "Https": {
        "Url": "https://localhost:8001",
        "Certificate": {
          "Path": "self-sign.cer",
          "KeyPath": "private.key"
        }
      }
    }
  },
  "PermissionsTable":{
    "Admin": {
      "describe":"管理员",
      "permissions": ["/team/add/","/team/show/","/team/update/","/team/del/",
                      "/user/add/","/user/show/","/user/update/","/user/del/",
                      "/reagent/add/","/reagent/show/","/reagent/update/","/reagent/del/","/reagent/showall/",
                      "/lot/add/","/lot/show/","/lot/update/","/lot/del/","/lot/showall/",
                      "/operation/inbound/","/operation/outbound/","/operation/special_outbound/","/operation/show/","/operation/update/","/operation/del/","/operation/exporttoexcel/",
                      "/inventory/show/", "/inventory/auditall/","/inventory/dashboard/","/inventory/statistics/"
      ],
      "scope":"all"
    },
    "Leader": {
      "describe":"组长",
      "permissions": ["/team/show",
                      "/user/add/","/user/show","/user/update/","/user/del/",
                      "/reagent/add/","/reagent/show/","/reagent/update/","/reagent/showall/",
                      "/lot/add/","/lot/show/","/lot/update/","/lot/showall/",
                      "/operation/inbound/","/operation/outbound/","/operation/special_outbound/","/operation/show/","/operation/del/","/operation/exporttoexcel/",
                       "/inventory/show/", "/inventory/auditall/","/inventory/dashboard/","/inventory/statistics/"
                                                                         ],
      "scope":"team"
    },
    "Member": {
      "describe":"组员",
      "permissions": ["/team/show",
        "/user/show",
        "/reagent/add/","/reagent/show/","/reagent/update/","/reagent/showall/",
        "/lot/add/","/lot/show/","/lot/update/","/lot/showall/",
        "/operation/inbound/","/operation/outbound/","/operation/special_outbound/","/operation/show/","/operation/del/","/operation/exporttoexcel/",
        "/inventory/show/", "/inventory/auditall/","/inventory/dashboard/","/inventory/statistics/"
      ],
      "scope":"team"
    }
  }
}
